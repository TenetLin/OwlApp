/* miniprogram/pages/story_detail/index.wxss */page { background-color: #213C5C; font-family: PingFangSC-Regular; }
.main {
  position: absolute;
  width: 100%
}

.item_hover{background-color: rgba(0, 0, 0, 0.1);}

.content { display: block; margin: 0 10px 10px; background-color:#fff; border-radius: 10px; padding: 20px 20px 30px; position: relative;}
.content .header { display: block; height: 27px; margin: 0;}
.content .header .tag { background-color: #5B94DC; float: left; font-size: 13px; padding: 2px 7px; border-radius: 5px; margin-top: 2px;}
.content .header .owner-icon { width: 27px; height: 27px; float: left; border-radius: 50%;}
.content .header .owner-text { color: #002464; font-size:14px; float: left; margin: 3px 10px; }
.content .header .text-date { float: right; color: #999999; font-size: 14px; margin-top: 3px;}
.content .text { font-size: 15px; color: #434343; line-height: 27px; margin: 20px 0;}
.content .image { width: 100%; }

.content view { border-radius: 0 0 10px 10px }
.content .more-container { position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient( rgba(254,250,243,0), rgba(255,255,255,1))}

.content .title { color: #999; font-size: 12px; text-align: right; }

.comment-container { margin: 20px 0; height: 100%;}
.comment-container .title { font-size: 15px; font-weight: bold; color: #212121; text-align: left;}
 .list-item { margin-top: 16px;}
 .list-item .user-container { width: 100%; height: 32px;}
.user-container .user { width: 27px; height: 27px; float: left; border-radius: 50%; }
.user-container .nickname { float: left; color: #999; font-size: 14px; margin: 4px 0 0 12px;} 

.list-item .comment-content { width: 100%; color: #212121; font-size: 14px; padding-left: 35px; margin-top: 4px}
.list-item .more { color:#999;font-size:12px;text-align:right; }
.list-item .right { width: 16px; height: 16px; float: right; margin-right: 15px;}

.comment-bottom { position: relative;}
.comment-input { background: #f4f4f4; font-size: 14px; padding: 4px 8px; border-radius: 4px;}


.num-area { color: #002464; padding: 12px 0 8px;}

.comment-bottom .btn { position: absolute; right: 0px; top:0px; z-index: 100; width: 30px; padding: 0px 3px; background: transparent; font-size: 12px;}
.num-area image { width: 14px; height: 14px;}
.num-area { font-size: 12px;}
.num-area view { display: inline-block; }

.num-area .comment { width: 45% }
.num-area .resonance { width: 30%; text-align: center; }
.num-area .share { width: 25%; border: none; font-size: 12px; background-color: transparent; display: inline-block; padding: 0;line-height: 1}

.comment text { float: left; margin-left: 5px; }
.comment image { float: left; }

.resonance text { margin-left: 5px; float:left;}
.resonance image { float:left;}

.share image { float:right; margin-right: 5px;}
.share text { float: right;  }

.button-hover { color: rgb(0, 0, 0, 1); }

button::after {border: none;}
button {background-color: #fff;}