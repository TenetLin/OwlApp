page { background: #f8f8f8; font-family: PingFangSC-Regular; 
font-size: 14px; overflow: scroll; position: absolute; padding-bottom: 50px; }
.main {
  position: absolute;
  width: 100%
}
.title { color: #212121; padding: 10px 15px; background: #fff; border-bottom: 1px solid #f7f9fa;}

.story-content { margin-top: 10px; background: #fff; min-height: 200px;padding: 15px 15px;  position: relative;}
.story-content .textarea { width: 100%; display: block; height: 150px; }
.story-content .textareatail { width: 100%; display: block; height: 50px; }

.image-container { width: 85px; height: 85px; margin:10px 10px 0 0; position: relative; display: inline-block;}
.image-container .upload { width: 85px; height: 85px; }
.image-container .close { width: 22px; height: 22px; position: absolute; right: 0; top: 0; }

.image-container.add-container {width: 83px; height: 83px; border: 1px solid #eee; align-items: center;}
.add {width: 12px; height: 12px; float: left; margin: 35px 35px;}


.footer  { padding: 6px 15px; background: #fff; position: fixed; bottom: 0; left: 0; right: 0}
.footer .upload { width: 22px; height: 22px; float: left; margin-top: 4px;}
.footer .radio { float: left; margin: 4px 0 0;}
.footer .radio .image { margin-top: 3px; float: left; width: 16px; height: 16px; background-repeat:no-repeat; background-size:100% 100%; background-image: url(data:image/png;base64,); }
.footer .radio.checked .image {background-image: url(data:image/png;base64,); }
.footer .radio .text { float: left; margin-left: 6px; font-size: 16px;}
.footer .btn { float: right; width: 67px; height: 30px; font-size: 12px; background: #47668f; border-radius: 16px; color: #f7f9fa; vertical-align: middle}
