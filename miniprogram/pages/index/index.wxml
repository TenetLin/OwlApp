<view class='page-header '>
  <open-data type='userAvatarUrl' class='user'></open-data>
  <text class='date'>{{date}}</text>
  <image class='weather-icon' src='/images/weather3.png'/>
  <text class='weather-text'>多云</text>
</view>

<view class='content-container'>
  <navigator class='content' wx:for='{{list}}' wx:key='_id' wx:for-item='item' wx:for-index='idx' hover-class='item_hover' url='/pages/story_detail/index?id={{item._id}}'>
    <view class='header'>
      <view wx:if='{{item.checked}}' class='tag'>原创</view>
      <image class='owner-icon' src='{{item.userInfo.avatarUrl}}'/>
      <text class='owner-text'>作者: {{item.userInfo.nickName}}</text>
      <!--<text class='text-date'>1小时以前</text>-->
    </view>
    <view class='text'>
      <view>{{item.start_text}}</view>
      <image class='image' mode='aspectFit' wx:for='{{item.start_images}}' wx:for-item='image' wx:key='fileID' src='{{image.tempFileURL}}'></image>
    </view>
    <view class='more-container'>
    <view class='more'>
      <text>查看更多</text>
      <image src='/images/arrow3.png'/>
      </view> 
    </view>
    
  </navigator>
</view>